<?xml version="1.0"?>
<odoo>
    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">estate.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Test">
            <group>
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" type="object" string="Accept" />
                <button name="action_refuse" type="object" string="Refuse" />
                <field name="status" />
            </group>
            </form>
        </field>
    </record>
    <record id="estate_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel" editable="bottom">
                <field name="price" />
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="action_accept" type="object" string="Accept" />
                <button name="action_refuse" type="object" string="Refuse" />
                <field name="status" />
            </tree>
        </field>
    </record>
</odoo>